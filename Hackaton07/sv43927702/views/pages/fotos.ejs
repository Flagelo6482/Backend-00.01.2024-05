<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <div class="jumbotron">
        <h1>Fotos de Unsplash</h1>
        <p>Consulta fotos sobre el tema: "<%= query %>"</p>
        <br>
        <% if (photos && photos.length > 0) { %>
            <ul>
                <% photos.forEach((photo) => { %>
                    <li>
                        <h3><%= photo.alt_description %></h3>
                        <img src="<%= photo.urls.regular %>" alt="<%= photo.alt_description %>">
                        <p>Fot√≥grafo: <%= photo.user.name %></p>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No se encontraron fotos para el tema especificado.</p>
        <% } %>
      
    </div>

</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>