<main class="container">
<section class="movies" id="movies">
    <h2>Featured Movies</h2>
	<div class="row">
        <% results.forEach(function(pelicula) { %>
           
		<div class="col-lg-3 col-md-4 col-sm-6">
			<article class="card">
				<header class="title-header">
					<h3><%= pelicula.titleText.text %></h3>
				</header>
				<div class="card-block">
					<div class="img-card">
						<img src="<%= pelicula.primaryImage.url  %>" alt="Movie" class="w-100" />
					</div>
					<p class="tagline card-text text-xs-center"> <%= pelicula.primaryImage.caption.plainText  %> </p>
					<a href="#" class="btn btn-primary btn-block"><i class="fa fa-eye"></i> Watch Now</a>
				</div>
			</article>
		</div>
        <% }); %>
	</div>
</section>
